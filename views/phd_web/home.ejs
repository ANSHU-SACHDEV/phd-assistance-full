      font-weight: 500;
      font-size: 1rem;
    }

    nav a:hover {
      text-decoration: underline;
      color: #8B4513;
    }

    /* Main Layout */
    .main-container {
      display: flex;
      padding: 30px;
      gap: 30px;
      flex-wrap: wrap;
    }

    .contact-box {
      background: #fff;
      width: 300px;
      padding: 20px;
